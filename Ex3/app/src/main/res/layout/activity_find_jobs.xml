<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_search_icon" />

        <EditText
            android:id="@+id/main_job_title"
            style="@style/EditText_OneLine"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_box_border"
            android:hint="@string/findjob_job_title"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColorHint="@color/hint_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/main_location"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_box_border"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/findjob_location"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColorHint="@color/hint_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/main_find_job_button"
            style="@style/PinkButton"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="29dp"
            android:text="@string/findjob_find_job"
            android:textAllCaps="false"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>